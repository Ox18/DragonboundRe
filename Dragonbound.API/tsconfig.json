{
	"compilerOptions": {
		"outDir": "dist",
		"module": "commonjs",
		"target": "es2019",
		"esModuleInterop": true,
		"sourceMap": true,
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/tests/*": ["../tests/*"],
			"@/*": ["*"],
			"@models/*": ["domain/models/*"],
			"@usecases/*": ["domain/usecases/*"],
			"@protocols/*": ["presentation/protocols/*"]
		}
	},
	"include": ["src", "tests"],
	"exclude": []
}
